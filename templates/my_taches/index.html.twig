{% extends 'base.html.twig' %}

{% block title %}addTaches{% endblock %}

{% block body %}
<form method="post">

    <h1 class="h3 mb-3 font-weight-normal">addTaches</h1>
    <label for="inputTitle">titre</label>
    <input type="text" name="titre" id="inputTitle" class="form-control" required></br>
    <label for="inputDescription">description</label>
    <input type="text" name="description" id="inputDescription" class="form-control" required></br>
    <label for="inputCreationDate">creationDate</label>
    <input type="date" name="creationDate" id="inputCreationDate" class="form-control" required></br>
    <label for="inputEcheanceDate">EcheanceDate</label>
    <input type="date" name="EcheanceDate" id="inputEcheanceDate" class="form-control" required></br>
    <label for="inputStatus">Status</label>
    <input type="number" name="Status" id="inputStatus" class="form-control" required></br>
    <label for="inputCategorie">Categorie</label>
    <input type="number" name="Categorie" id="inputCategorie" class="form-control" required></br>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Add
    </button>
</form>
{% endblock %}
